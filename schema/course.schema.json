{
  "$anchor": "textinput-course",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$patch": {
    "source": {
      "$ref": "course"
    },
    "with": {
      "properties": {
        "_globals": {
          "type": "object",
          "default": {},
          "properties": {
            "_components": {
              "type": "object",
              "default": {},
              "properties": {
                "_textinput": {
                  "type": "object",
                  "title": "Introducere text",
                  "default": {},
                  "properties": {
                    "ariaRegion": {
                      "type": "string",
                      "title": "Zonă ARIA", 
                      "default": "Introducerea textului. Tastați răspunsul și apoi trimiteți-l.",
                      "_adapt": {
                        "translatable": true
                      }
                    },
                    "correctAnswerPrefix": {
                      "type": "string",
                      "title": "Prefixul ARIA pentru răspunsul corect",
                      "description": "Dacă _canShowCorrectness este activat, acest text oferă un prefix pentru opțiunea corectă afișată sub intrarea trimisă",
                      "default": "Răspunsul corect este",
                      "_adapt": {
                        "translatable": true
                      }
                    },
                    "correctAnswersPrefix": {
                      "type": "string",
                      "title": "Prefixul ARIA pentru răspunsurile corecte",
                      "description": "Dacă _canShowCorrectness este activată, acest text oferă un prefix pentru lista de opțiuni corecte separate prin virgulă afișată sub intrarea trimisă",
                      "default": "Răspunsurile corecte acceptate includ",
                      "_adapt": {
                        "translatable": true
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
